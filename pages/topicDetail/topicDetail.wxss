page {
  background-color: #e7e7e7;
}
.topicTop {
  height: 20vh;
  background-color: white;
  display: flex;
  position: relative;
}
.topicTop .topicLeft {
  margin-left: 22rpx;
}
.topicTop .topicLeft .icon {
  color: #51cd32;
  font-size: 88rpx;
}
.topicTop .topicRight {
  position: relative;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.topicTop .topicRight .nameWrap {
  display: flex;
}
.topicTop .topicRight .nameWrap .topicName {
  font-size: 36rpx;
  font-weight: 600;
}
.topicTop .topicRight .nameWrap .HOT {
  margin-top: 14rpx;
  margin-left: 10rpx;
  border-radius: 8px 0 8px 0;
  display: block;
  height: 35rpx;
  width: 60rpx;
  text-align: center;
  line-height: 35rpx;
  background-color: orange;
  color: white;
  font-weight: 600;
  font-size: 20rpx;
}
.topicTop .topicRight .mySign {
  font-size: 26rpx;
  color: #929292;
  padding-right: 15rpx;
  width: 580rpx;
}
.topicTop .attendWrap {
  display: flex;
  position: absolute;
  top: 188rpx;
  left: 121rpx;
  font-size: 26rpx;
}
.topicTop .attendWrap .personNum {
  margin-left: 50rpx;
  color: #929292;
}
.topicTop .attendWrap .personNum text {
  font-weight: 600;
  color: black;
}
.topicTop .attendWrap .rubish {
  color: #929292;
  margin-left: 50rpx;
}
.topicTop .attendWrap .contentNum {
  color: #929292;
  margin-left: 50rpx;
}
.topicTop .attendWrap .contentNum text {
  font-weight: 600;
  color: black;
}
.typeWrap {
  display: flex;
  margin: 20rpx 40rpx;
}
.typeWrap .hot {
  font-weight: 600;
}
.typeWrap .hot::after {
  content: '';
  width: 50%;
  height: 1px;
  display: block;
  margin: 0 auto;
  border-bottom: 2px solid #1f1f1f;
}
.typeWrap .new {
  font-weight: 600;
  margin-left: 48rpx;
}
.friendWrap {
  background-color: white;
  margin: 20rpx;
  border-radius: 10px;
}
.friendWrap .friendHead {
  padding: 10px;
  display: flex;
}
.friendWrap .friendHead .touxiang {
  padding-right: 10px;
}
.friendWrap .friendHead .touxiang .image {
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  background-color: yellow;
}
.friendWrap .friendHead .friendInfo {
  margin-top: 7rpx;
}
.friendWrap .friendHead .friendInfo .friendName {
  font-size: 28rpx;
  font-weight: 600;
}
.friendWrap .friendHead .friendInfo .friendName .man {
  color: #28bcf7;
}
.friendWrap .friendHead .friendInfo .friendSign {
  font-size: 24rpx;
  color: #999797;
}
.friendWrap .friendBody .friendContent {
  padding: 0 12px;
  font-size: 30rpx;
}
.friendWrap .friendBody .image-list {
  margin-top: 15rpx;
  display: flex;
  flex-wrap: wrap;
  padding: 0 8rpx;
}
.friendWrap .friendBody .image-list .image {
  border-radius: 20rpx;
  width: 220rpx;
  height: 220rpx;
  background-color: #f3f3f3;
  margin-bottom: 10rpx;
  /*让图片下边和右边产生边距*/
  margin-left: 10rpx;
}
.friendWrap .typeWrap {
  margin-top: 10rpx;
  margin-left: 25rpx;
  margin-bottom: 10rpx;
}
.friendWrap .typeWrap .contentType text {
  display: inline-block;
  height: 55rpx;
  line-height: 55rpx;
  text-align: center;
  border-radius: 10px;
  padding: 0 15rpx;
  background-color: aquamarine;
  font-size: 28rpx;
  color: #444444;
}
.friendWrap .handle-area {
  display: flex;
  position: relative;
}
.friendWrap .handle-area .handleLeft {
  position: relative;
  left: 30rpx;
  top: 5rpx;
  font-size: 26rpx;
}
.friendWrap .handle-area .handleRight {
  position: relative;
  right: -112rpx;
}
.friendWrap .handle-area .handleRight text {
  margin-right: 15px;
  color: #999797;
}
.friendWrap .friendComment {
  margin: 20rpx;
  border-radius: 10px;
  padding: 0 20rpx;
  background-color: #f8f8f8;
}
.friendWrap .friendComment .comment .user {
  font-size: 26rpx;
  color: #3535f8;
}
.friendWrap .friendComment .comment text {
  font-size: 26rpx;
}
.friendWrap .friendComment .more {
  color: #3535f8;
  font-size: 26rpx;
}
